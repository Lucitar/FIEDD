  <section class="container_form" style="margin-top: 0px; margin-bottom: 100px;">
    
          <div class="box-chat">
            <h3 style="text-align: center;">Chat - Redes</h3>
            <div class="chat" id ="chat">

              <%for(let cont = 0; cont < lista.length; cont++){%>
              
              <span style="color: #1C62C4;"><%= lista[cont].remetente%></span>
              <span style="color: #848484;"><%= lista[cont].mensagem%></span>
              <span style="float: right;"><%= dateFormat(lista[cont].data_de_envio ,"dd/mm/yyyy hh:MM:ss TT");%></span>
              <br>
              <br>
              <%}%>
            </div>

            <form method="POST" action="/dashboard_aluno/chat_redes">    
              <input type="text" name="mensagem" placeholder="Escreve algo aqui">
              <input type="submit" name="enviar" value="Enviar">
            </form>

          </div>
    
    </section>

